extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Categor√≠a:
      input#name.form-control(type='text', placeholder='Aventura, Estrategia, etc.' name='name' required value=(undefined===category ? '' : category.name) )
    button.btn.btn-primary.mt-4(type='submit') Aceptar

  if errors
    ul(class='mt-3')
      for error in errors
        li!= error.msg